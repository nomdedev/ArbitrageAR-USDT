   ========================================== */

/* ===========================================
   🎯 SISTEMA DE ICONOS SVG (Fase 2)
   =========================================== */

/* Base de iconos */
.icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: var(--space-5);
  height: var(--space-5);
  color: currentColor;
  flex-shrink: 0;
}

.icon svg {
  width: 100%;
  height: 100%;
  stroke-width: var(--icon-stroke, 2px);
  stroke-linecap: round;
  stroke-linejoin: round;
  fill: none;
}

/* Tamaños de iconos */
.icon-sm {
  width: var(--space-4);
  height: var(--space-4);
}

.icon-lg {
  width: var(--space-6);
  height: var(--space-6);
}

.icon-xl {
  width: var(--space-8);
  height: var(--space-8);
}
/* Colores de iconos */
.icon-primary {
  color: var(--color-brand-primary);
}
.icon-danger {
  color: var(--color-danger);
}

.icon-warning {
  color: var(--color-warning);
}
.icon-white {
  color: #ffffff;
}
.icon-pulse {
  animation: pulse 2s ease-in-out infinite;
}
@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-3px);
  }
}
/* Iconos con glow */
.icon-glow {
  filter: drop-shadow(0 0 3px currentColor);
}
/* ===========================================
   💬 SISTEMA DE TOOLTIPS (Fase 3)
   =========================================== */

/* Contenedor del tooltip */
.tooltip-container {
  position: fixed;
  z-index: var(--z-tooltip);
  background: var(--color-bg-elevated);
  border: 1px solid var(--color-border-default);
  border-radius: var(--radius-md);
  padding: var(--space-2) var(--space-3);
  max-width: 280px;
  font-size: var(--font-size-sm);
  line-height: var(--line-height-normal);
  color: var(--color-text-primary);
  box-shadow: var(--shadow-lg);
  opacity: 0;
  pointer-events: none;
  transform: scale(0.95);
  transition: opacity var(--duration-normal) var(--ease-out),
              transform var(--duration-normal) var(--ease-out);
}

/* Tooltip visible */
.tooltip-container.tooltip-visible {
  opacity: 1;
  pointer-events: auto;
  transform: scale(1);
}
/* Flecha indicadora */
.tooltip-arrow {
  position: absolute;
  width: 8px;
  height: 8px;
  background: var(--color-bg-elevated);
  border: 1px solid var(--color-border-default);
  z-index: 0;
}
.tooltip-container.tooltip-right .tooltip-arrow {
  left: -5px;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
  border-top: none;
  border-right: none;
}
.tooltip-container.tooltip-left .tooltip-arrow {
  right: -5px;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
  border-bottom: none;
  border-left: none;
}

/* Animación de entrada para tooltip */
@keyframes tooltipFadeIn {
  from {
    opacity: 0;
    transform: scale(0.95) translateY(-4px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* Animación de salida para tooltip */
@keyframes tooltipFadeOut {
  from {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
  to {
    opacity: 0;
    transform: scale(0.95) translateY(-4px);
  }
}

/* Tooltip con animación de entrada */
.tooltip-container.tooltip-visible {
  animation: tooltipFadeIn var(--duration-normal) var(--ease-out);
}

/* Reducir movimiento para accesibilidad */
@media (prefers-reduced-motion: reduce) {
  .tooltip-container {
    transition: opacity var(--duration-instant) linear;
  }
  
  .tooltip-container.tooltip-visible {
    animation: none;
  }
}

/* ===========================================
   🎨 SISTEMA DE DISEÑO UNIFICADO
   =========================================== */
:root {
  /* === COLORES BASE (GitHub Dark Style) === */
  --color-bg-primary: #0d1117;
  --color-bg-secondary: #161b22;
  --color-bg-tertiary: #21262d;
  --color-bg-elevated: #30363d;
  --color-bg-canvas: #010409;

  /* Gradientes de fondo */
  --bg-primary: linear-gradient(135deg, #0d1117 0%, #161b22 100%);
  --bg-secondary: linear-gradient(135deg, #161b22 0%, #21262d 100%);
  --bg-tertiary: #21262d;
  --bg-dark: #0d1117;
  --bg-darker: #010409;

  /* === COLORES DE MARCA === */
  --color-brand-primary: #58a6ff;
  --color-brand-secondary: #79c0ff;
  --primary-blue: #58a6ff;
  --primary-blue-dark: #1f6feb;
  --primary-blue-light: #79c0ff;
  --accent-cyan: #56d4dd;
  --accent-purple: #bc8cff;

  /* === COLORES SEMÁNTICOS === */
  --color-success: #3fb950;
  --color-success-muted: #238636;
  --color-success-subtle: rgba(63, 185, 80, 0.15);
  --color-danger: #f85149;
  --color-danger-muted: #da3633;
  --color-danger-subtle: rgba(248, 81, 73, 0.15);
  --color-warning: #d29922;
  --color-warning-muted: #9e6a03;
  --color-warning-subtle: rgba(210, 153, 34, 0.15);
  --color-info: #58a6ff;

  /* Compatibilidad con nombres anteriores */
  --profit-green: #3fb950;
  --profit-green-dark: #238636;
  --profit-green-light: #56d364;
  --profit-green-glow: rgba(63, 185, 80, 0.4);
  --loss-red: #f85149;
  --loss-red-dark: #da3633;
  --loss-red-glow: rgba(248, 81, 73, 0.4);
  --success: #3fb950;
  --warning: #d29922;
  --error: #f85149;
  --info: #58a6ff;

  /* === COLORES DE TEXTO === */
  --color-text-primary: #f0f6fc;
  --color-text-secondary: #8b949e;
  --color-text-muted: #8b949e; /* Mejorado contraste WCAG AA - Era #6e7681 (3.2:1) */
  --color-text-inverse: #0d1117;
  --text-primary: #f0f6fc;
  --text-secondary: #8b949e;
  --text-muted: #6e7681;
  --text-dim: #484f58;

  /* === COLORES DE BORDE === */
  --color-border-default: #30363d;
  --color-border-muted: #21262d;
  --color-border-emphasis: #8b949e;

  /* === TIPOGRAFÍA === */
  --font-size-xs: 0.75rem; /* 12px - Aumentado desde 0.6875rem (11px) */
  --font-size-sm: 0.8125rem; /* 13px - Aumentado desde 0.75rem (12px) */
  --font-size-base: 0.875rem; /* 14px - Aumentado desde 0.8125rem (13px) */
  --font-size-md: 0.875rem; /* 14px */
  --font-size-lg: 1rem; /* 16px */
  --font-size-xl: 1.125rem; /* 18px */
  --font-size-2xl: 1.25rem; /* 20px */
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  --line-height-tight: 1.25;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.75;

  /* === ESPACIADO (Base 4px) === */
  --space-0: 0;
  --space-1: 0.25rem; /* 4px */
  --space-2: 0.5rem; /* 8px */
  --space-3: 0.75rem; /* 12px */
  --space-4: 1rem; /* 16px */
  --space-5: 1.25rem; /* 20px */
  --space-6: 1.5rem; /* 24px */
  --space-8: 2rem; /* 32px */
  /* Compatibilidad */
  /* ELIMINADO: Variables --spacing-* - Usar --space-* en su lugar */

  /* === BORDES === */
  --radius-sm: 4px;
  --radius-md: 6px;
  --radius-lg: 8px;
  --radius-xl: 12px;
  --radius-2xl: 16px;
  --radius-full: 9999px;
  /* Compatibilidad */
  --border-radius-sm: 6px;
  --border-radius-md: 8px;
  --border-radius-lg: 12px;
  --border-radius-xl: 16px;
  --border-radius: 8px;

  /* === SOMBRAS === */
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 8px rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 8px 16px rgba(0, 0, 0, 0.5);
  --shadow-xl: 0 16px 32px rgba(0, 0, 0, 0.6);
  --shadow-glow-success: 0 0 12px rgba(63, 185, 80, 0.4);
  --shadow-glow-danger: 0 0 12px rgba(248, 81, 73, 0.4);
  --shadow-glow-green: 0 0 16px var(--profit-green-glow);
  --shadow-glow-red: 0 0 16px var(--loss-red-glow);

  /* === EASING FUNCTIONS ADICIONALES (Fase 1 Fundamentos UI/UX) === */
  --ease-out-quart: cubic-bezier(0.25, 1, 0.5, 1);
  --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
  --ease-in-out-quart: cubic-bezier(0.77, 0, 0.175, 1);
  --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);
  --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);

  /* === Z-INDEX SCALE (Fase 1 Fundamentos UI/UX) === */
  --z-base: 1;
  --z-dropdown: 100;
  --z-sticky: 200;
  --z-fixed: 300;
  --z-modal-backdrop: 400;
  --z-modal: 500;
  --z-popover: 600;
  --z-tooltip: 700;

  /* === INPUTS === */
  --input-bg: rgba(13, 17, 23, 0.8);
  --input-border: var(--color-border-default);
  --input-border-focus: var(--primary-blue);
  --input-shadow-focus: 0 0 0 3px rgba(88, 166, 255, 0.2);
  --input-radius: var(--radius-md);
  --input-padding: 8px 12px;
  --input-transition: all var(--duration-fast) var(--ease-default);

  /* === CARDS === */
  --card-bg: linear-gradient(135deg, rgba(22, 27, 34, 0.9) 0%, rgba(33, 38, 45, 0.7) 100%);
  --card-bg-hover: linear-gradient(135deg, rgba(22, 27, 34, 1) 0%, rgba(33, 38, 45, 0.9) 100%);
  --card-border: 1px solid var(--color-border-default);
  --card-border-hover: 1px solid var(--color-border-emphasis);
  --shadow-card: var(--shadow-md);
  --shadow-card-hover: var(--shadow-lg);
  --border-card: 1px solid rgba(48, 54, 61, 0.8);
  --border-card-hover: 1px solid rgba(88, 166, 255, 0.4);
  --backdrop-blur: blur(12px);
  --transition-fast: all var(--duration-fast) var(--ease-default);
  --hover-lift: translateY(-2px);

  /* === INDICADORES DE PROFIT === */
  --indicator-width: 3px;
  --indicator-width-high: 4px;
  --indicator-opacity: 0.9;
  --indicator-opacity-hover: 1;
  --profit-positive: var(--color-success);
  --profit-negative: var(--color-danger);
  --profit-high: var(--color-success);
  --profit-low: var(--color-warning);
  --border-hover: var(--color-border-emphasis);

  /* === GRADIENTES === */
  --gradient-primary: linear-gradient(135deg, #1f6feb 0%, #58a6ff 100%);
  --gradient-primary-hover: linear-gradient(135deg, #58a6ff 0%, #79c0ff 100%);
  --gradient-success: linear-gradient(135deg, #238636 0%, #3fb950 100%);
  --gradient-success-hover: linear-gradient(135deg, #3fb950 0%, #56d364 100%);
  --gradient-warning: linear-gradient(135deg, #9e6a03 0%, #d29922 100%);
  --gradient-error: linear-gradient(135deg, #da3633 0%, #f85149 100%);
  --gradient-info: linear-gradient(135deg, #1f6feb 0%, #58a6ff 100%);
  --gradient-info-hover: linear-gradient(135deg, #388bfd 0%, #58a6ff 100%);
  --gradient-neutral: linear-gradient(135deg, #6e7681 0%, #484f58 100%);
  --gradient-neutral-hover: linear-gradient(135deg, #484f58 0%, #30363d 100%);
  --gradient-profit: linear-gradient(180deg, #3fb950 0%, #238636 100%);
  --gradient-profit-high: linear-gradient(180deg, #56d364 0%, #3fb950 100%);
  --gradient-loss: linear-gradient(180deg, #f85149 0%, #da3633 100%);
  --gradient-bg-dark: linear-gradient(180deg, #0d1117 0%, #161b22 100%);
  --gradient-bg-darker: linear-gradient(180deg, #010409 0%, #0d1117 100%);
}

/* ============================================
   ACCESIBILIDAD GLOBAL v6.0.0
   Focus states consistentes para todos los elementos
   ============================================ */

/* Focus visible para navegación por teclado */
:focus {
  outline: none;
}

/* Focus visible mejorado con transición suave (Fase 1) */
:focus-visible {
  outline: 2px solid var(--color-brand-primary);
  outline-offset: 2px;
  transition: outline-color var(--duration-fast) var(--ease-out);
}

/* Focus para botones */
button:focus-visible,
.btn:focus-visible,
.btn-settings:focus-visible,
.btn-refresh:focus-visible,
.btn-configure:focus-visible,
.btn-recalculate:focus-visible {
  outline: 2px solid var(--color-brand-primary);
  outline-offset: 2px;
  box-shadow: 0 0 0 4px rgba(88, 166, 255, 0.2);
}

/* Focus para tabs */
.tab:focus-visible,
.tab-button:focus-visible,
.banks-tab-btn:focus-visible {
  outline: 2px solid var(--color-brand-primary);
  outline-offset: -2px;
  box-shadow: inset 0 0 0 2px rgba(88, 166, 255, 0.3);
}

/* Focus para inputs */
input:focus-visible,
select:focus-visible,
textarea:focus-visible {
  border-color: var(--color-brand-primary);
  box-shadow: 0 0 0 3px rgba(88, 166, 255, 0.2);
}

/* Focus para links */
a:focus-visible {
  outline: 2px solid var(--color-brand-primary);
  outline-offset: 2px;
  border-radius: 2px;
}

/* Reducir movimiento para usuarios que lo prefieren */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

/* ==========================================
   🎬 ANIMACIONES CONSOLIDADAS
   ========================================== */

/* Pulse - Animación universal para indicadores activos */
@keyframes pulse {
  0%,
  100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.05);
  }
}

/* Pulse Glow - Con efecto de brillo */
@keyframes pulseGlow {
  0%,
  100% {
    box-shadow: 0 0 5px currentColor;
  }
  50% {
    box-shadow:
      0 0 15px currentColor,
      0 0 30px currentColor;
  }
}

/* Skeleton Loader - Para estados de carga */
@keyframes skeletonPulse {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* Flash Update - Para datos actualizados */
@keyframes flashUpdate {
  0% {
    background: var(--color-success);
    opacity: 0.3;
  }
  100% {
    background: transparent;
    opacity: 1;
  }
}

/* Tab Enter - Transición de pestañas */
@keyframes tabEnter {
  from {
    opacity: 0;
    transform: translateY(8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Fade In */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Slide In */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Rotate - Para spinners */
/* ELIMINADO: @keyframes rotate - Duplicado de loadingSpin (líneas 768-775) */

/* Shake - Para errores */
/* ELIMINADO: @keyframes shake - Duplicado de errorShake (líneas 817-827) */

/* Slide Down - Para elementos que aparecen desde arriba */
@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Step Slide In - Para pasos de guía */
@keyframes stepSlideIn {
  from {
    opacity: 0;
    transform: translateX(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* ==========================================
   FASE 4: ANIMACIONES BASE - ENTRADA
   ========================================== */

/* Slide Up - Aparece desde abajo */
@keyframes slideUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Scale In - Aparece con escala */
@keyframes scaleIn {
  from {
    transform: scale(0.95);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* Stagger In - Para listas con delay */
@keyframes staggerIn {
  from {
    transform: translateY(15px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}
.scale-in {
  animation: scaleIn var(--duration-normal) var(--ease-spring);
  animation-fill-mode: both;
}

.stagger-in {
  animation: staggerIn var(--duration-normal) var(--ease-out-expo);
  animation-fill-mode: both;
}

/* Fade In mejorado */
.fade-in {
  animation: fadeIn var(--duration-normal) var(--ease-out-quart);
  animation-fill-mode: both;
}
/* ==========================================
   FASE 4: ANIMACIONES BASE - SALIDA
   ========================================== */

/* Fade Out - Desaparece desvaneciendo */
@keyframes fadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

/* Slide Up Out - Desaparece hacia arriba */
@keyframes slideUpOut {
  from {
    transform: translateY(0);
    opacity: 1;
  }
  to {
    transform: translateY(-20px);
    opacity: 0;
  }
}

/* Scale Out - Desaparece con escala */
@keyframes scaleOut {
  from {
    transform: scale(1);
    opacity: 1;
  }
  to {
    transform: scale(0.95);
    opacity: 0;
  }
}
.slide-up-out {
  animation: slideUpOut var(--duration-fast) var(--ease-in);
  animation-fill-mode: forwards;
}
/* Skeleton loader base - Fase 2: Shimmer mejorado */
@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

.skeleton {
  background: linear-gradient(
    90deg,
    var(--color-bg-tertiary) 0%,
    var(--color-bg-elevated) 50%,
    var(--color-bg-tertiary) 100%
  );
  background-size: 200% 100%;
  animation: shimmer 1.5s ease-in-out infinite;
  border-radius: var(--radius-md);
}
.skeleton-card {
  height: 80px;
  margin: var(--space-2) 0;
}

/* ==========================================
   FASE 4: ANIMACIONES BASE - MICRO-INTERACCIONES
   ========================================== */

/* Hover Lift - Efecto de elevación al hover */
.hover-lift {
  transition: transform var(--duration-fast) var(--ease-out),
              box-shadow var(--duration-fast) var(--ease-out);
}

.hover-lift:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}
.hover-glow:hover {
  box-shadow: 0 0 12px rgba(88, 166, 255, 0.3);
}

/* Click Shrink - Efecto de encogimiento al click */
.click-shrink {
  transition: transform var(--duration-fast) var(--ease-in);
}

.click-shrink:active {
  transform: scale(0.97);
}
@keyframes clickPulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(0.95);
  }
  100% {
    transform: scale(1);
  }
}

/* Focus Ring - Anillo de focus mejorado */
.focus-ring:focus-visible {
  outline: none;
  box-shadow: 0 0 0 3px rgba(88, 166, 255, 0.3);
  position: relative;
}

.focus-ring:focus-visible::after {
  content: '';
  position: absolute;
  inset: -4px;
  border: 2px solid var(--color-brand-primary);
  border-radius: inherit;
  pointer-events: none;
}

/* Skeleton container para estados de carga */
.skeleton-container {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  padding: var(--space-3);
}

.skeleton-container .loading-text {
  text-align: center;
  color: var(--color-text-muted);
  font-size: var(--font-size-sm);
  margin-top: var(--space-2);
  animation: pulse 2s ease-in-out infinite;
}

/* ==========================================
   FASE 4: ANIMACIONES BASE - LOADING
   ========================================== */

/* Shimmer mejorado para loading */
@keyframes loadingShimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}
/* Spin mejorado para loading */
@keyframes loadingSpin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
/* Dot Pulse - Para indicadores de carga con puntos */
@keyframes dotPulse {
  0%, 100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}
.loading-dots span {
  width: 8px;
  height: 8px;
  background: var(--color-brand-primary);
  border-radius: 50%;
  animation: dotPulse 1.4s ease-in-out infinite;
}
.loading-dots span:nth-child(2) {
  animation-delay: 0.2s;
}
/* ==========================================
   FASE 4: ANIMACIONES BASE - FEEDBACK
   ========================================== */

/* Success Pulse - Para confirmaciones exitosas */
@keyframes successPulse {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(63, 185, 80, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 0 10px rgba(63, 185, 80, 0);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(63, 185, 80, 0);
  }
}
/* Error Shake - Para errores */
@keyframes errorShake {
  0%, 100% {
    transform: translateX(0);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: translateX(-5px);
  }
  20%, 40%, 60%, 80% {
    transform: translateX(5px);
  }
}
/* Warning Blink - Para advertencias */
@keyframes warningBlink {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}
/* Update Flash - Para actualizaciones de datos */
@keyframes updateFlash {
  0% {
    background-color: rgba(88, 166, 255, 0.3);
  }
  100% {
    background-color: transparent;
  }
}
