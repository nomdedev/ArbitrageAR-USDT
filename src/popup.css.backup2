/* ==========================================
   FASE 5: MICRO-INTERACCIONES AVANZADAS
   Efectos hover y animaciones mejoradas
   ========================================== */

/* Ripple Effect - Onda expansiva al hacer click */
.ripple {
  position: relative;
  overflow: hidden;
}

.ripple::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  background-image: radial-gradient(circle, rgba(255, 255, 255, 0.3) 10%, transparent 10.01%);
  background-repeat: no-repeat;
  background-position: 50%;
  transform: scale(10, 10);
  opacity: 0;
  transition: transform 0.4s var(--ease-out), opacity 0.4s var(--ease-out);
}

.ripple:active::after {
  transform: scale(0, 0);
  opacity: 0.3;
  transition: 0s;
}
.magnetic:hover {
  transform: scale(1.02);
}

/* Icon Rotation - Rotación de iconos al hover */
.icon-rotate {
  transition: transform var(--duration-normal) var(--ease-out);
}

.icon-rotate:hover {
  transform: rotate(15deg);
}
/* Icon Spin - Rotación completa al hover */
.icon-spin-hover:hover .icon {
  animation: iconSpin 0.6s var(--ease-out);
}

@keyframes iconSpin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
.bounce-hover:hover {
  animation: bounceHover 0.4s var(--ease-bounce);
}

@keyframes bounceHover {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-4px); }
}
.underline-animated::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 2px;
  bottom: -2px;
  left: 0;
  background: currentColor;
  transform: scaleX(0);
  transform-origin: right;
  transition: transform var(--duration-normal) var(--ease-out);
}
/* Card Flip - Efecto de volteo 3D */
.card-flip {
  perspective: 1000px;
  transform-style: preserve-3d;
}
.card-flip:hover .card-flip-inner,
.card-flip.flipped .card-flip-inner {
  transform: rotateY(180deg);
}
.card-flip-back {
  transform: rotateY(180deg);
}
/* Progress Ring - Anillo de progreso circular */
.progress-ring {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
/* Counter Animation - Animación de números */
.counter-animated {
  display: inline-block;
  transition: all var(--duration-normal) var(--ease-out);
}
@keyframes counterPulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}
@keyframes glowPulse {
  0%, 100% {
    box-shadow: 0 0 5px currentColor;
  }
  50% {
    box-shadow: 0 0 20px currentColor, 0 0 30px currentColor;
  }
}
.shimmer-effect::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.1) 50%,
    transparent 100%
  );
  animation: shimmerSlide 2s infinite;
}

@keyframes shimmerSlide {
  0% { left: -100%; }
  100% { left: 100%; }
}
.morph-icon:hover {
  transform: scale(1.2) rotate(10deg);
  border-radius: 50%;
}
.elastic-button:hover {
  transform: scale(1.05);
}
/* Scale on Hover - Escala suave */
.scale-hover {
  transition: transform var(--duration-fast) var(--ease-out);
}
/* Rotate on Hover - Rotación suave */
.rotate-hover {
  transition: transform var(--duration-normal) var(--ease-out);
}
/* Fade Scale on Hover - Desvanecimiento y escala */
.fade-scale-hover {
  transition: all var(--duration-normal) var(--ease-out);
}
/* Slide Up Reveal - Revelación deslizante */
.slide-up-reveal {
  position: relative;
  overflow: hidden;
}
.slide-up-reveal:hover::after {
  transform: translateY(0);
}
/* Pulse Border - Borde pulsante */
.pulse-border {
  position: relative;
}
.pulse-border:hover::before {
  opacity: 1;
}

@keyframes pulseBorder {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}
.shake-hover:hover {
  animation: shakeHover 0.5s ease-in-out;
}

@keyframes shakeHover {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-2px); }
  75% { transform: translateX(2px); }
}
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}
@keyframes typing {
  from { width: 0; }
  to { width: 100%; }
}

@keyframes blink {
  from, to { border-color: transparent; }
  50% { border-color: var(--color-brand-primary); }
}
.wave-effect::before,
.wave-effect::after {
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  top: -50%;
  left: -50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  opacity: 0;
  transition: opacity var(--duration-normal) var(--ease-out);
}
.wave-effect:hover::after {
  animation: wave 1.5s ease-out 0.3s;
  opacity: 1;
}

@keyframes wave {
  0% { transform: scale(0); }
  100% { transform: scale(1); opacity: 0; }
}
.spotlight-effect::before {
  content: '';
  position: absolute;
  width: 100px;
  height: 100px;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
  opacity: 0;
  transition: opacity var(--duration-fast) var(--ease-out);
}
/* Gradient Shift - Cambio de gradiente */
.gradient-shift {
  background-size: 200% 200%;
  animation: gradientShift 3s ease infinite;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}
.tilt-3d:hover {
  transform: perspective(1000px) rotateX(5deg) rotateY(5deg);
}

