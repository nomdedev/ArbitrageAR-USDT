  font-weight: 700;
  line-height: 1.2;
  letter-spacing: -0.02em;
  color: var(--color-text-primary);
}

/* Títulos - Nivel 2 */
.heading-2 {
  font-size: 20px;
  font-weight: 600;
  line-height: 1.3;
  letter-spacing: -0.01em;
  color: var(--color-text-primary);
}

/* Títulos - Nivel 3 */
.heading-3 {
  font-size: 18px;
  font-weight: 600;
  line-height: 1.4;
  color: var(--color-text-primary);
}

/* Títulos - Nivel 4 */
.heading-4 {
  font-size: 16px;
  font-weight: 600;
  line-height: 1.5;
  color: var(--color-text-primary);
}
/* Texto del cuerpo - Normal */
.body {
  font-size: 14px;
  font-weight: 400;
  line-height: 1.5;
  color: var(--color-text-primary);
}

/* Texto del cuerpo - Pequeño */
.body-small {
  font-size: 12px;
  font-weight: 400;
  line-height: 1.4;
  color: var(--color-text-primary);
}

/* Texto del cuerpo - Extra pequeño */
.body-xs {
  font-size: 11px;
  font-weight: 400;
  line-height: 1.4;
  color: var(--color-text-secondary);
}

/* Texto secundario */
.text-secondary {
  color: var(--color-text-secondary);
}

/* Texto muted */
.text-muted {
  color: var(--color-text-muted);
}

/* Texto con énfasis */
.text-emphasis {
  font-weight: 600;
  color: var(--color-text-primary);
}
/* Texto con color de éxito */
.text-success {
  color: var(--color-success);
}
/* Texto con color de advertencia */
.text-warning {
  color: var(--color-warning);
}

/* Monospace para números/code */
.text-mono {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
  font-size: 0.9em;
}
/* Texto con línea a través */
.text-line-through {
  text-decoration: line-through;
  color: var(--color-text-secondary);
}
/* ==========================================
   SISTEMA DE ESPACIADO VISUAL
   ========================================== */

/* Contenedores con espaciado interno */
.container-tight {
  padding: var(--space-2);
}
.container-relaxed {
  padding: var(--space-6);
}
/* Márgenes entre elementos */
.stack-xs > * + * {
  margin-top: var(--space-1);
}
.stack-md > * + * {
  margin-top: var(--space-3);
}
.stack-xl > * + * {
  margin-top: var(--space-6);
}
.inline-sm > * + * {
  margin-left: var(--space-2);
}
.inline-lg > * + * {
  margin-left: var(--space-4);
}
.divider-vertical {
  width: 1px;
  height: 100%;
  background: var(--color-border);
  margin: 0 var(--space-4);
}
.gap-sm {
  gap: var(--space-2);
}
.gap-lg {
  gap: var(--space-4);
}
/* ==========================================
   SISTEMA DE PESOS VISUALES
   ========================================== */

/* Elementos con peso visual ligero */
.weight-light {
  opacity: 0.7;
}
/* Elementos con peso visual medio */
.weight-medium {
  opacity: 0.85;
  font-weight: 500;
}
/* Elementos con peso visual extra fuerte */
.weight-bold {
  opacity: 1;
  font-weight: 700;
}
/* Bordes normales */
.border-normal {
  border: 1px solid var(--color-border);
}
/* Sombras sutiles */
.shadow-subtle {
  box-shadow: var(--shadow-sm);
}
/* Sombras prominentes */
.shadow-prominent {
  box-shadow: var(--shadow-lg);
}

/* ==========================================
   JERARQUÍA VISUAL APLICADA A COMPONENTES
   ========================================== */

/* Header con jerarquía visual mejorada */
header h1 {
  font-size: 20px;
  font-weight: 700;
  letter-spacing: -0.02em;
}

header .subtitle {
  font-size: 12px;
  font-weight: 400;
  color: var(--color-text-secondary);
  margin-top: 2px;
}
.route-card .route-profit {
  font-size: 18px;
  font-weight: 700;
  letter-spacing: -0.01em;
}
.route-card .route-badges {
  display: flex;
  gap: var(--space-2);
  margin-top: var(--space-3);
}
/* Tabs con jerarquía visual */
.tab {
  font-size: 13px;
  font-weight: 500;
  color: var(--color-text-secondary);
  padding: var(--space-3) var(--space-4);
  transition: all var(--duration-fast) var(--ease-out-quart);
}

.tab:hover {
  color: var(--color-text-primary);
  background: var(--color-bg-secondary);
}

.tab.active {
  font-weight: 600;
  color: var(--color-primary);
  border-bottom: 2px solid var(--color-primary);
}
.filter-btn .btn-count {
  font-size: 11px;
  font-weight: 600;
  min-width: 20px;
  height: 20px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-sm);
}
.filter-btn.active .btn-count {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

/* Footer con jerarquía visual */
footer {
  padding: var(--space-4);
  border-top: 1px solid var(--color-border);
  background: var(--color-bg-secondary);
}

footer .data-status {
  font-size: 12px;
  color: var(--color-text-secondary);
  display: flex;
  align-items: center;
  gap: var(--space-2);
}
/* ==========================================
   MEJORAS DE CONTRASTE Y LEGIBILIDAD
   ========================================== */

/* Variables adicionales para bordes sutiles */
:root {
  --color-border-subtle: rgba(48, 54, 61, 0.5);
  --color-primary: var(--color-brand-primary);
}
.text-secondary {
  color: var(--color-text-secondary); /* #8b949e sobre #161b22 - verificar contraste */
}
/* Profit con mejor contraste */
.profit-positive {
  color: var(--color-success);
  font-weight: 700;
}

.profit-negative {
  color: var(--color-danger);
  font-weight: 700;
}
.badge-primary {
  background: var(--color-primary);
  color: white;
}
.badge-warning {
  background: var(--color-warning);
  color: var(--color-bg-primary);
}
