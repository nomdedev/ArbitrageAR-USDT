/* ==========================================
   FASE 4: EFECTOS AVANZADOS - Parallax Sutil en Header
   ========================================== */
.header-content {
  transform-style: preserve-3d;
  perspective: 1000px;
}

.header-content:hover {
  animation: parallaxTilt 0.6s ease-out;
}

@keyframes parallaxTilt {
  0% { transform: rotateX(0) rotateY(0); }
  25% { transform: rotateX(2deg) rotateY(2deg); }
  50% { transform: rotateX(-1deg) rotateY(-2deg); }
  75% { transform: rotateX(1deg) rotateY(1deg); }
