{
  "name": "arbitragear-extension",
  "version": "6.0.0",
  "description": "Extensión de Chrome para detectar oportunidades de arbitraje entre el dólar oficial argentino y exchanges de USDT",
  "main": "src/background/main-simple.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:legacy": "node tests/run-all-tests.js",
    "test:bank-methods": "node tests/test-bank-methods.js",
    "test:e2e": "playwright test",
    "test:e2e:extension": "playwright test --config=playwright.extension.config.js --headed",
    "test:e2e:all": "npm run test:e2e && npm run test:e2e:extension",
    "test:e2e:serial": "playwright test --headed --workers=1 --reporter=line",
    "test:e2e:extension:serial": "playwright test --config=playwright.extension.config.js --headed --workers=1 --reporter=line",
    "test:e2e:all:serial": "npm run test:e2e:serial && npm run test:e2e:extension:serial",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "build": "node scripts/build.js",
    "build:prod": "node scripts/build.js --production",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "package": "npm run build:prod && node scripts/package.js",
    "version:bump": "node scripts/bump-version.js",
    "validate": "npm run lint && npm run format:check && npm run test",
    "metrics": "node scripts/metrics.js",
    "prepare": "npm run validate"
  },
  "keywords": [
    "chrome-extension",
    "arbitrage",
    "cryptocurrency",
    "argentina",
    "usdt",
    "dollar"
  ],
  "author": "ArbitrageAR Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nomdedev/ArbitrageAR-USDT.git"
  },
  "bugs": {
    "url": "https://github.com/nomdedev/ArbitrageAR-USDT/issues"
  },
  "homepage": "https://github.com/nomdedev/ArbitrageAR-USDT#readme",
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@playwright/test": "^1.58.1",
    "archiver": "^7.0.1",
    "clean-css": "^5.3.3",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.58.1",
    "prettier": "^3.2.5",
    "terser": "^5.31.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "Chrome >= 88",
    "Firefox >= 85",
    "Edge >= 88"
  ]
}
