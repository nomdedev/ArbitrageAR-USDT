{
  "manifest_version": 3,
  "name": "ArbitrageAR Oficial a USDT Broker",
  "version": "3.2.1",
  "description": "Extensión Brave para arbitraje Dólar Oficial -> USDT Broker usando Dolarito y CriptoYA APIs",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "https://*.dolarapi.com/*",
    "https://*.criptoya.com/*",
    "https://*.dolarito.ar/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}