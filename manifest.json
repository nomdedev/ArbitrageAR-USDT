{
  "manifest_version": 3,
  "name": "ArbitrARS - Detector de Arbitraje",
  "version": "5.0.72",
  "description": "Extensión para navegadores Chromium que detecta oportunidades de arbitraje entre el Dólar Oficial argentino y USDT en exchanges locales",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "options_page": "src/options.html",
  "host_permissions": [
    "https://*.dolarapi.com/*",
    "https://*.criptoya.com/*",
    "https://*.dolarito.ar/*"
  ],
  "background": {
    "service_worker": "src/background/main-simple.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}